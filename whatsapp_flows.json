{
    "version": "7.2",
    "screens": [
        {
            "id": "DOCTOR_REGISTRATION",
            "title": "Onboarding",
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "reg_form",
                        "children": [
                            {
                                "type": "TextInput",
                                "name": "full_name",
                                "label": "Full Name",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "email",
                                "label": "Email Address",
                                "input-type": "email",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "phone",
                                "label": "Phone Number",
                                "input-type": "phone",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "license_no",
                                "label": "Medical License",
                                "required": true
                            },
                            {
                                "type": "Footer",
                                "label": "Next: Set Timing",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "DOCTOR_AVAILABILITY"
                                    },
                                    "payload": {
                                        "full_name": "${form.full_name}",
                                        "email": "${form.email}",
                                        "phone": "${form.phone}",
                                        "license_no": "${form.license_no}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "DOCTOR_AVAILABILITY",
            "title": "Set Timing",
            "data": {
                "full_name": {
                    "type": "string",
                    "__mapping": "data.full_name",
                    "__example__": "Dr. John"
                },
                "email": {
                    "type": "string",
                    "__mapping": "data.email",
                    "__example__": "dr@ex.com"
                },
                "phone": {
                    "type": "string",
                    "__mapping": "data.phone",
                    "__example__": "+91"
                },
                "license_no": {
                    "type": "string",
                    "__mapping": "data.license_no",
                    "__example__": "L123"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "avail_form",
                        "children": [
                            {
                                "type": "DatePicker",
                                "name": "available_dates",
                                "label": "Available Dates",
                                "required": true
                            },
                            {
                                "type": "Dropdown",
                                "name": "start_time",
                                "label": "Start Time",
                                "required": true,
                                "data-source": [
                                    {
                                        "id": "09:00",
                                        "title": "09:00 AM"
                                    },
                                    {
                                        "id": "10:00",
                                        "title": "10:00 AM"
                                    },
                                    {
                                        "id": "11:00",
                                        "title": "11:00 AM"
                                    },
                                    {
                                        "id": "12:00",
                                        "title": "12:00 PM"
                                    },
                                    {
                                        "id": "13:00",
                                        "title": "01:00 PM"
                                    },
                                    {
                                        "id": "14:00",
                                        "title": "02:00 PM"
                                    },
                                    {
                                        "id": "15:00",
                                        "title": "03:00 PM"
                                    },
                                    {
                                        "id": "16:00",
                                        "title": "04:00 PM"
                                    },
                                    {
                                        "id": "17:00",
                                        "title": "05:00 PM"
                                    }
                                ]
                            },
                            {
                                "type": "Dropdown",
                                "name": "end_time",
                                "label": "End Time",
                                "required": true,
                                "data-source": [
                                    {
                                        "id": "17:00",
                                        "title": "05:00 PM"
                                    },
                                    {
                                        "id": "18:00",
                                        "title": "06:00 PM"
                                    },
                                    {
                                        "id": "19:00",
                                        "title": "07:00 PM"
                                    },
                                    {
                                        "id": "20:00",
                                        "title": "08:00 PM"
                                    },
                                    {
                                        "id": "21:00",
                                        "title": "09:00 PM"
                                    }
                                ]
                            },
                            {
                                "type": "Footer",
                                "label": "Next: Verification",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "DOCTOR_VERIFICATION"
                                    },
                                    "payload": {
                                        "full_name": "${data.full_name}",
                                        "email": "${data.email}",
                                        "phone": "${data.phone}",
                                        "license_no": "${data.license_no}",
                                        "available_dates": "${form.available_dates}",
                                        "start_time": "${form.start_time}",
                                        "end_time": "${form.end_time}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "DOCTOR_VERIFICATION",
            "title": "ID Verification",
            "terminal": true,
            "success": true,
            "data": {
                "full_name": {
                    "type": "string",
                    "__mapping": "data.full_name",
                    "__example__": "Dr. John"
                },
                "email": {
                    "type": "string",
                    "__mapping": "data.email",
                    "__example__": "dr@ex.com"
                },
                "phone": {
                    "type": "string",
                    "__mapping": "data.phone",
                    "__example__": "+1"
                },
                "license_no": {
                    "type": "string",
                    "__mapping": "data.license_no",
                    "__example__": "L123"
                },
                "available_dates": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "__mapping": "data.available_dates",
                    "__example__": []
                },
                "start_time": {
                    "type": "string",
                    "__mapping": "data.start_time",
                    "__example__": "09:00"
                },
                "end_time": {
                    "type": "string",
                    "__mapping": "data.end_time",
                    "__example__": "17:00"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "verify_form",
                        "children": [
                            {
                                "type": "PhotoPicker",
                                "name": "id_proofs",
                                "label": "Identity Proof",
                                "description": "Please select 2 photos: Medical ID and Government ID Card.",
                                "min-uploaded-photos": 2,
                                "max-uploaded-photos": 2
                            },
                            {
                                "type": "Footer",
                                "label": "Complete Registration",
                                "on-click-action": {
                                    "name": "complete",
                                    "payload": {
                                        "full_name": "${data.full_name}",
                                        "email": "${data.email}",
                                        "phone": "${data.phone}",
                                        "license_no": "${data.license_no}",
                                        "available_dates": "${data.available_dates}",
                                        "start_time": "${data.start_time}",
                                        "end_time": "${data.end_time}",
                                        "id_proofs": "${form.id_proofs}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}