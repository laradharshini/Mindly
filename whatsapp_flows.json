{
    "version": "7.2",
    "screens": [
        {
            "id": "DOCTOR_REGISTRATION",
            "title": "Onboarding",
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "reg_form",
                        "children": [
                            {
                                "type": "TextInput",
                                "name": "full_name",
                                "label": "Full Name",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "email",
                                "label": "Email Address",
                                "input-type": "email",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "phone",
                                "label": "Phone Number",
                                "input-type": "phone",
                                "required": true
                            },
                            {
                                "type": "TextInput",
                                "name": "license_no",
                                "label": "Medical License",
                                "required": true
                            },
                            {
                                "type": "Footer",
                                "label": "Next: Verification",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "DOCTOR_VERIFICATION"
                                    },
                                    "payload": {
                                        "full_name": "${form.full_name}",
                                        "email": "${form.email}",
                                        "phone": "${form.phone}",
                                        "license_no": "${form.license_no}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "DOCTOR_VERIFICATION",
            "title": "Identity Proof",
            "data": {
                "full_name": {
                    "type": "string",
                    "__mapping": "data.full_name",
                    "__example__": "Dr. John"
                },
                "email": {
                    "type": "string",
                    "__mapping": "data.email",
                    "__example__": "dr@ex.com"
                },
                "phone": {
                    "type": "string",
                    "__mapping": "data.phone",
                    "__example__": "+9199"
                },
                "license_no": {
                    "type": "string",
                    "__mapping": "data.license_no",
                    "__example__": "L123"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "verify_form",
                        "children": [
                            {
                                "type": "PhotoPicker",
                                "name": "medical_id_img",
                                "label": "Medical ID Card",
                                "required": true,
                                "max-files": 1
                            },
                            {
                                "type": "PhotoPicker",
                                "name": "govt_id_img",
                                "label": "Government ID",
                                "required": true,
                                "max-files": 1
                            },
                            {
                                "type": "Footer",
                                "label": "Next: Availability",
                                "on-click-action": {
                                    "name": "navigate",
                                    "next": {
                                        "type": "screen",
                                        "name": "DOCTOR_AVAILABILITY"
                                    },
                                    "payload": {
                                        "full_name": "${data.full_name}",
                                        "email": "${data.email}",
                                        "phone": "${data.phone}",
                                        "license_no": "${data.license_no}",
                                        "medical_id": "${form.medical_id_img}",
                                        "govt_id": "${form.govt_id_img}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "DOCTOR_AVAILABILITY",
            "title": "Set Timing",
            "terminal": true,
            "success": true,
            "data": {
                "full_name": {
                    "type": "string",
                    "__mapping": "data.full_name",
                    "__example__": "Dr. John"
                },
                "email": {
                    "type": "string",
                    "__mapping": "data.email",
                    "__example__": "dr@ex.com"
                },
                "phone": {
                    "type": "string",
                    "__mapping": "data.phone",
                    "__example__": "+1"
                },
                "license_no": {
                    "type": "string",
                    "__mapping": "data.license_no",
                    "__example__": "L123"
                },
                "medical_id": {
                    "type": "array",
                    "__mapping": "data.medical_id",
                    "__example__": []
                },
                "govt_id": {
                    "type": "array",
                    "__mapping": "data.govt_id",
                    "__example__": []
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "avail_form",
                        "children": [
                            {
                                "type": "DatePicker",
                                "name": "available_dates",
                                "label": "Available Dates",
                                "required": true
                            },
                            {
                                "type": "TimePicker",
                                "name": "start_time",
                                "label": "Start Time",
                                "required": true
                            },
                            {
                                "type": "TimePicker",
                                "name": "end_time",
                                "label": "End Time",
                                "required": true
                            },
                            {
                                "type": "Footer",
                                "label": "Complete Setup",
                                "on-click-action": {
                                    "name": "complete",
                                    "payload": {
                                        "full_name": "${data.full_name}",
                                        "email": "${data.email}",
                                        "phone": "${data.phone}",
                                        "license_no": "${data.license_no}",
                                        "medical_id": "${data.medical_id}",
                                        "govt_id": "${data.govt_id}",
                                        "available_dates": "${form.available_dates}",
                                        "start_time": "${form.start_time}",
                                        "end_time": "${form.end_time}"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}